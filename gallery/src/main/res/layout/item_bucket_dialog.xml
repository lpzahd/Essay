<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_drawee_view"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/image_drawee_view"
        android:layout_alignRight="@+id/image_drawee_view"
        android:layout_alignBottom="@+id/image_drawee_view"
        android:textSize="11sp"
        android:textColor="?attr/colorPrimary"
        tools:text="10"
        tools:ignore="SmallSp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:maxWidth="72dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_drawee_view"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        tools:text="一个叫文件夹的文件夹"/>

</RelativeLayout>