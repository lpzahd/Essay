<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/essay_parent"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/title_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:hint="@string/title"
        android:textColorHint="#999999"
        android:textColor="#666666"
        android:lines="1"
        android:textSize="@dimen/s20"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/bg_rect_radius_gray_p8"/>


    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/content_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:hint="@string/essay"
        android:textColorHint="#999999"
        android:textColor="#666666"
        android:minLines="3"
        android:maxLines="12"
        android:textSize="@dimen/s12"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="start"
        android:background="@drawable/bg_rect_radius_gray_p8"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_rect_radius_orange_p8"
            android:gravity="center"
            android:lines="1"
            android:minWidth="64dp"
            android:paddingBottom="6dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingTop="6dp"
            android:stateListAnimator="@animator/btn_selector_animtor"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/s12"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/positive"
            android:layout_toStartOf="@+id/positive"
            android:background="@null"
            android:gravity="center"
            android:lines="1"
            android:minWidth="64dp"
            android:paddingBottom="6dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingTop="6dp"
            android:stateListAnimator="@animator/btn_selector_animtor"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/s12"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>

