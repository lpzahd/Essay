<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/essay_parent"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="12dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/title_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp">

        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hint="@string/title"
            android:lines="1"
            android:textSize="@dimen/s20" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/content_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp">

        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/essay"
            android:maxLines="12"
            android:textSize="@dimen/s16" />

    </android.support.design.widget.TextInputLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:gravity="center"
            android:lines="1"
            android:minWidth="72dp"
            android:paddingBottom="8dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingTop="8dp"
            android:stateListAnimator="@animator/btn_selector_animtor"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/s14" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/positive"
            android:layout_toStartOf="@+id/positive"
            android:background="@null"
            android:gravity="center"
            android:lines="1"
            android:minWidth="72dp"
            android:paddingBottom="8dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingTop="8dp"
            android:stateListAnimator="@animator/btn_selector_animtor"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/s14" />

    </RelativeLayout>

</LinearLayout>

